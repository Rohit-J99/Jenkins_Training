
pipeline {

    agent any
    parameters {
    string(name: 'PERSON', defaultValue: 'Rohit', description: 'greet the person by his name', trim: true)
    }
    environment {
        NEW_VERSION = '1.1.0'
        // ENV_1V=${JENKINS_URL}
        // ENV_2V=GIT_AUTHOR_NAME
        // ENV_3V=BRANCH_NAME
    
    }
    
    stages {
        stage("Hello") {
            steps {
                echo "Hello ${params.PERSON}"
            }
        }


        stage("pythonScript") {
            steps{
                // sh "python3 ./scripts/Demo.py"
                sh "python3 ./scripts/NewMain.py --location policies --policyName policy1 --printEnvVarName NEW_VERSION"

            }
        }


        stage("build") {

             when {
                expression {
                    BRANCH_NAME == 'main' && NEW_VERSION >= '1.1.0' 
                }
            }
        
            steps {
                echo 'building the application...'
            }
        }

        stage('parallel stages') {
        parallel {
            stage('build') {
            steps {
                echo 'parallely building!'
            }
            }
            stage('test') {
            steps {
                echo 'parallely testing!'
            }
            }
        }
        }
  
        stage("test") {
        
            when {
                expression {
                    BRANCH_NAME == 'test' 
                }
            }
            steps {
                echo 'testing the application...'
            }
        }

        
        stage("deploy") {

             when {
                expression {
                    BRANCH_NAME == 'dev' || BRANCH_NAME == 'main'
                }
            }
        
            steps {
                echo 'deploying the application...'
                echo "deploying version ${NEW_VERSION}"
            }
        }

        stage("env1")
        {
            steps{
                echo "jenkins URL: ${JENKINS_URL}"
            }
              
        }
        // stage("env2")
        // {
        //     steps{
        //         echo "GIT Author Name: ${GIT_AUTHOR_NAME}"
        //     }
        // }
        stage("env3")
        {
            steps{
                echo "Branch Name: ${BRANCH_NAME}"
            }
        }
    }
        post {
        success{
            echo 'Build successful'
        }
        failure {
            echo 'Build failed'
        }
    }
}




